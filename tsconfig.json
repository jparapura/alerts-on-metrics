{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    "noEmit": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "dev/**/*",
    "*"
  ]
}